<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/application_background"
    android:gravity="center"
    tools:context=".clientside.ClientRegistration">

    <TextView
        android:id="@+id/tv_registration_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="@string/profile_heading"
        android:textColor="@color/text_color"
        android:textSize="30sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignBottom="@id/tv_registration_heading"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/tv_registration_heading"
        android:background="@color/off_black" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_display_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_registration_heading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@color/material_on_background_disabled"
        app:cardCornerRadius="100dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_baseline_account_circle_24" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/cv_display_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/spinner_background"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/tv_id_type"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/tv_user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_background"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/tv_id_number"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/tv_id_type"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_background"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_phone_number"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/tv_id_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_background"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="20sp" />


    <View
        android:id="@+id/v_base"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/tv_phone_number"
        android:layout_alignBaseline="@id/bt_edit_profile_button"
        android:background="@color/off_black" />

    <Button
        android:id="@+id/bt_edit_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_phone_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/login_button_background_color"
        android:text="@string/edit_profile_button"
        android:textColor="@color/text_color"
        android:textSize="20sp" />


</RelativeLayout>