<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/spinner_background"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_title_check"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:text="sample"
        android:textColor="@color/text_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_date_check"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_check"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:text="sample"
        android:textColor="@color/text_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_status_check"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_date_check"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:text="sample"
        android:textColor="@color/text_color"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_check"
        android:layout_alignTop="@id/tv_date_check"
        android:layout_alignEnd="@id/tv_title_check"
        android:layout_alignBottom="@id/tv_status_check"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/tv_date_check">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="@color/material_on_background_disabled"
            app:cardCornerRadius="100dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_local_phone_24" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/spinner_background"
            app:cardBackgroundColor="@color/material_on_background_disabled"
            app:cardCornerRadius="100dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_mail_outline_24" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>